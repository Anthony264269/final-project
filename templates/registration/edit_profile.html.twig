{% extends 'base.html.twig' %}

{% block head %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/styles/register.css') }}">
    {% endblock %}
{% endblock %}

{% block title %}Modifier mon profil{% endblock %}

{% block body %}
    <div class="logo-container">
        <h2>Modifier mon profil
        <img src="{{ asset('images/mon-logo/logo.png') }}" class="img-fluid logo" alt="img logo"></h2>
    </div>
    <div class="container">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        {{ form_errors(profileForm) }}

        {{ form_start(profileForm, {'attr': {'class': 'form-horizontal'}, 'enctype': 'multipart/form-data'}) }}
            <div class="form-group">
                {{ form_label(profileForm.pseudo, 'Pseudo :') }}
                {{ form_widget(profileForm.pseudo, { 'attr': {'class': 'form-control text-dark'} }) }}
            </div>

            <div class="form-group">
                {{ form_label(profileForm.plainPassword, 'Mot de passe :') }}
                {{ form_widget(profileForm.plainPassword, { 'attr': {'class': 'form-control'} }) }}
            </div>

            <div class="form-group custom-file-input">
                <label class="file-label" for="{{ profileForm.photo.vars.id }}">
                    <img src="{{ asset('images/logo/add-photo.png') }}" alt="Ajouter une photo" class="white-logo">
                    <p>Ajouter une photo</p>
                </label>
                {{ form_widget(profileForm.photo, {'attr': {'class': 'file-input'}}) }}
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Enregistrer</button>
            </div>

        {{ form_end(profileForm) }}
    </div>
{% endblock %}
