{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block head %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/styles/register.css') }}">
    {% endblock %}
{% endblock %}

{% block body %}
    <div class="logo-container">
        <h2>Inscription
        <img src="{{ asset('images/mon-logo/logo.png') }}" class="img-fluid logo" alt="img voiture"></h2>
    </div>
    <div class="container-1">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'} }) }}
            <div class="form-group">
                {{ form_label(registrationForm.pseudo, 'Pseudo :') }}
                {{ form_widget(registrationForm.pseudo, { 'attr': {'class': 'form-control text-dark'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.country, 'Pays :') }}
                {{ form_widget(registrationForm.country, { 'attr': {'class': 'form-control text-dark'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.birthAt, 'Date de naissance :') }}
                {{ form_widget(registrationForm.birthAt, { 'attr': {'class': 'form-control text-dark'} }) }}
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.email, 'Email :') }}
                {{ form_widget(registrationForm.email, { 'attr': {'class': 'form-control text-dark'} }) }}
                {{ form_errors(registrationForm.email) }}
            </div>
            <div class="form-group">
                {{ form_label(registrationForm.plainPassword, 'Mot de passe :') }}
                {{ form_widget(registrationForm.plainPassword, { 'attr': {'class': 'form-control'} }) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.agreeTerms) }}
            </div>
            <div class="buton-valider">
                <button type="submit" class="btn btn-lg btn-primary btn-block">Enregistrer</button>
            </div>
        {{ form_end(registrationForm) }}
        <a href="{{ path('app_home') }}">Retour Ã  la page d'accueil</a>
    </div>
{% endblock %}
