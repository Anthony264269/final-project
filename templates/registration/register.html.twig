{% extends 'base.html.twig' %}
{% block title %}Inscription{% endblock %}
{% block head %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/styles/register.css') }}">
    {% endblock %}
{% endblock %}



{% block body %}
    <h1 class="text-white text-center pb-5">Inscription</h1>
    <div class="input-box">
        {% for flash_error in app.flashes('verify_email_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}

        {{ form_errors(registrationForm) }}

        {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}
            <div class="form-group">
                {{ form_row(registrationForm.pseudo, { 'attr': {'class': 'form-control text-dark'} }) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.country, { 'attr': {'class': 'form-control text-dark'} }) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.birthAt, { 'attr': {'class': 'form-control text-dark'} }) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.email, { 'attr': {'class': 'form-control text-dark'} }) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.plainPassword, { 'attr': {'class': 'form-control'}, 'label': 'Mot de passe' }) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.agreeTerms) }}
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-lg btn-primary btn-block">Enregistrer</button>
            </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
