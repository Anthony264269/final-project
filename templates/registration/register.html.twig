{% extends 'base.html.twig' %}
{% block title %}Inscription{% endblock %}

{% block body %}
<section id="accueil-enregistrement">

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1 class="text-white d-flex justify-content-center pb-5">Inscription</h1>
    <div class="input-box">
    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        <div class="d-flex pr-2">{{ form_row(registrationForm.email, { 'attr': {'class': 'text-dark'} }) }} <i class='bx bxs-user'></i></div>
        
        <div class="d-flex" >{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}<i class='bx bxs-lock-alt'></i></div>
        {{ form_row(registrationForm.agreeTerms) }}

        <button type="submit" class="btn btn-lg btn-primary">Enregistrer</button>
    {{ form_end(registrationForm) }}
    </div>
    </section>
{% endblock %}
