{% extends 'base.html.twig' %}

{% block title %}Ajout véhicule{% endblock %}

{% block body %}
    <h1 class="text-white d-flex justify-content-center pb-5">Ajout véhicule</h1>
    <div class="input-box d-flex justify-content-center align-items-center">
        {{ form_start(form) }}
        <div class="d-flex pr-2">{{ form_row(form.brand, { 'attr': {'class': 'text-dark'} }) }} <i class='bx bxs-user'></i></div>
        <div class="d-flex pr-2">{{ form_row(form.model, { 'attr': {'class': 'text-dark'} }) }} <i class='bx bxs-user'></i></div>
        <div class="d-flex pr-2">{{ form_row(form.motorization, { 'attr': {'class': 'text-dark'} }) }} <i class='bx bxs-user'></i></div>
        <button type="submit" class="btn btn-lg btn-primary">Enregistrer</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
