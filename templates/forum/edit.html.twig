{% extends 'base.html.twig' %}

{% block head %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/styles/forum-edit.css') }}">
    {% endblock %}
{% endblock %}

{% block title %}Edit Forum{% endblock %}

{% block body %}
<div class="container">
    <h1>Edit Forum</h1>

    {{ form_start(form) }} 
        <div class="form-group">
            {{ form_label(form.sujet, 'Sujet :') }}
            {{ form_widget(form.sujet, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.message, 'Message :') }}
            {{ form_widget(form.message, {'attr': {'class': 'form-control'}}) }}
        </div>

        <div class="form-group">
            {{ form_label(form.forumCategory, 'Cat√©gorie :') }}
            {{ form_widget(form.forumCategory, {'attr': {'class': 'form-control'}}) }}
        </div>

        {# <div class="form-group">
            {{ form_label(form.file, 'Ajouter une photo :') }}
            {{ form_widget(form.file, {'attr': {'class': 'form-control'}}) }}
        </div> #}

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    {{ form_end(form) }}

    <a href="{{ path('app_forum') }}" class="back-link">Back to list</a>

    {{ include('forum/_delete_form.html.twig') }}
</div>
{% endblock %}
