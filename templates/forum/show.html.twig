{% extends 'base.html.twig' %}

{% block head %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/styles/forum-show.css') }}">
    {% endblock %}
{% endblock %}

{% block title %}Forum{% endblock %}

{% block body %}
    <h1>Forum</h1>



    {% if forum.file %}
        {% for oneFile in forum.file %}
            <img src="{{ asset('uploads/forums/' ~ oneFile.url) }}" alt="photo" />
        {% endfor %}
    {% endif %}

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ forum.id }}</td>
            </tr>
            <tr>
                <th>Sujet</th>
                <td>{{ forum.sujet }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ forum.message }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ forum.createdAt ? forum.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ forum.updatedAt ? forum.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ forum.deletedAt ? forum.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_forum') }}">back to list</a>

    <a href="{{ path('app_forum_edit', {'id': forum.id}) }}">edit</a>

    {{ include('forum/_delete_form.html.twig') }}
{% endblock %}
