{% extends 'base.html.twig' %}

{% block head %}
	{% block stylesheets %}
		<link rel="stylesheet" href="{{ asset('assets/styles/forum-index.css') }}">
	{% endblock %}
{% endblock %}

{% block title %}Forum Index
{% endblock %}

{% block body %}
	<div class="container">
		<h3 class="fs-1">Forum Index</h3>
		<div class="row">
			{% for forum in forums %}

				<div class="card col-4 mx-3" style="width: 18rem;">
					{% for file in forum.file %}

						<img src="{{ asset('uploads/forums/' ~ file.url) }}" class="card-img-top" alt="...">
					{% endfor %}
					<div class="card-body">
						<h5 class="card-title">{{ forum.sujet }}</h5>
						<p class="card-text">{{ forum.user.pseudo }}</p>
						<p class="card-text">{{ forum.createdAt ? forum.createdAt|date('Y-m-d H:i:s') : '' }}</p>
						{% if forum.user.id == app.user.id %}
							<form action="{{ path('app_forum_delete', {'id': forum.id}) }}" method="post">
								<input type="hidden" name="_token" value="{{ csrf_token('delete' ~ forum.id) }}">
								<button type="submit" name="submit" class="btn btn-danger">delete</button>
							</form>
						{% endif %}
						<a href="{{path('app_forum_show', {'id': forum.id})}}" class="btn btn-primary">Lire plus...</a>
					</div>
				</div>
			{% endfor %}
		</div>

		<a href="{{ path('app_forum_new') }}" class="btn-link">Cr√©er un nouveau forum</a>
	</div>
{% endblock %}
