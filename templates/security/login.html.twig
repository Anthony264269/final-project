{% extends 'base.html.twig' %}

{% block head %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/styles/login.css') }}">
    {% endblock %}
{% endblock %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <h2 class="logo-container">Connexion
        <img src="{{ asset('images/mon-logo/logo.png') }}" class="logo" alt="logo mon atelier garage">
    </h2>
    <div class="input-box d-flex justify-content-center align-items-center">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            
            <label for="inputEmail">Pseudo</label>
            <i class='bx bxs-user'></i>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            
            <label for="inputPassword">Mot de passe</label>
            <i class='bx bxs-lock-alt'></i>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="btn-connexion" type="submit">Valider</button>
        </form>
    </div>
{% endblock %}
