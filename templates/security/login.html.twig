{% extends 'base.html.twig' %}

{% block head %}
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('assets/styles/login.css') }}">
    {% endblock %}
{% endblock %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div class="logo-container">
    <h2>Connexion
        <img src="{{ asset('images/mon-logo/logo.png') }}" class="logo" alt="logo mon atelier garage">
    </h2>
</div>
    <div class="container-1 form-registration">
        <form method="post" class="input-box">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            {% if app.user %}
                <div class="mb-3">
                    Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            
            <label for="inputEmail">Email</label>
            <i class='bx bxs-user'></i>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
            
            <label for="inputPassword" class="mt-4">Mot de passe</label>
            <i class='bx bxs-lock-alt'></i>
            <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="d-flex justify-content-center">
                <button class="btn btn-lg btn-primary btn-block mt-4" type="submit">Valider</button>
            </div>
        </form>
    </div>
{% endblock %}
